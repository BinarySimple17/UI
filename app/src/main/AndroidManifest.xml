<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.binarysimple.ui">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Splash"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".PersActivity"
            android:label="@string/title_activity_pers"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PersonListActivity"
            android:label="@string/title_person_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PersonDetailActivity"
            android:label="@string/title_person_detail"
            android:parentActivityName=".PersonListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.binarysimple.ui.PersonListActivity" />
        </activity>
        <activity
            android:name=".SavedResultsList"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
